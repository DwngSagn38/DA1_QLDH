<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.fragment_donvivanchuyen">

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"


        >
        <TextView
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vận chuyển"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="26dp"

            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"

            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dvvc"
                android:layout_marginLeft="10dp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thêm đơn vị vận chuyển"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:textSize="18dp"
                android:textColor="@color/black"

                />

            <ImageView
                android:id="@+id/imgThemDVVCadd"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/next"
                android:layout_gravity="center"
                android:layout_marginLeft="75dp"

                />


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"

            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dvvc"
                android:layout_marginLeft="10dp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Danh sách đơn vị vận chuyển"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:textSize="18dp"
                android:textColor="@color/black"

                />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/next"
                android:layout_gravity="center"
                android:layout_marginLeft="35dp"

                />


        </LinearLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"

            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dvvc"
                android:layout_marginLeft="10dp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đơn vị vận chuyển tạm ngừng"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:textSize="18dp"
                android:textColor="@color/black"

                />

            <ImageView
                android:id="@+id/imgDVVCNgung"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/next"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"

                />


        </LinearLayout>


    </LinearLayout>

    <TextView
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Danh Sách"
        android:textColor="@color/black"
        android:textSize="26dp"
        android:layout_marginTop="20dp"

        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvDonViVanChuyen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        />

</LinearLayout>