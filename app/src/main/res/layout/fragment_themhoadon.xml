<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.fragment_themhoadon">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Khách hàng"
            android:background="@color/gray"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:padding="10dp"/>

        <EditText
            android:id="@+id/edTenKHHD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên khách hàng"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:drawableEnd="@drawable/tenkhhd"/>

        <EditText
            android:id="@+id/edNgayNhan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ngày nhận hàng"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:drawableEnd="@drawable/ngaynhanhang"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sản phẩm"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:padding="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thêm sản phẩm"
                android:textStyle="italic"
                android:textSize="15sp"
                android:layout_marginLeft="90dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:padding="10dp"/>

            <ImageView
                android:id="@+id/btnThemSanPham"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/themsp"
                android:layout_gravity="center"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <ListView
            android:id="@+id/lvThemHoaDon"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>

        <TextView
            android:id="@+id/tvVanChuyen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:drawableEnd="@drawable/vchd"
            android:scrollbars="none"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tvGiamGia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tvTienCoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="10dp"
            android:background="@color/gray"/>

        <TextView
            android:id="@+id/tvTongTienHD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/red"/>


    </LinearLayout>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Yêu cầu khác"
            android:background="@color/gray"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:padding="10dp"/>

        <EditText
            android:id="@+id/edMoTaHD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mô tả"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:drawableEnd="@drawable/tenkhhd"/>

    <Button
        android:id="@+id/btnLuuAddHD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/khung"
        android:backgroundTint="@color/blue"
        android:text="Lưu"
        android:textStyle="bold"
        android:textSize="17dp"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"/>


</LinearLayout>