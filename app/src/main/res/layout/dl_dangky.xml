<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tạo người dùng"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="30sp"/>
        <EditText
            android:id="@+id/edUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/khung"
            android:hint="Nhập mã thành viên"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:drawableStart="@drawable/matv"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_margin="10dp"
            android:textStyle="bold"
            />
        <EditText
            android:id="@+id/edTen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/khung"
            android:hint="Nhập họ và tên"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:drawableStart="@drawable/nhaphoten"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_margin="10dp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/edsdt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/khung"
            android:hint="Nhập số điện thoại"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:drawableStart="@drawable/nhapsdt"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_margin="10dp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/edPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/khung"
            android:hint="Nhập mật khẩu"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:drawableStart="@drawable/nhappass"
            android:textSize="20dp"

            android:textColor="@color/black"
            android:drawableEnd="@drawable/toggle"
            android:layout_margin="10dp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/edRePass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/khung"
            android:hint="Nhập lại mật khẩu"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:drawableStart="@drawable/repass"
            android:drawableEnd="@drawable/toggle"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_margin="10dp"
            android:textStyle="bold" />

            <Button
                android:id="@+id/btnLuu"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Lưu"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/khungdn"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:textSize="17dp"/>

    </LinearLayout>


</LinearLayout>