<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.frgSP_KH.frgSanPham">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:layout_marginVertical="10dp"
        android:orientation="horizontal"
        android:id="@+id/section">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/section"/>

    <Button
        android:id="@+id/btnTatCa"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="40dp"
        android:background="@drawable/khung"
        android:textSize="13dp"
        android:textColor="@color/blue"
        android:text="Sản phẩm"/>

        <Button
            android:id="@+id/btnTheosize"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:background="@drawable/khung"
            android:textSize="13dp"
            android:textColor="@color/blue"
            android:layout_marginLeft="10dp"
            android:text="Bảng giá"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:background="@drawable/khung"
        android:orientation="vertical"
        android:layout_marginLeft="10dp">

        <EditText
            android:id="@+id/btnTT"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/blue"
            android:textSize="13dp"
            android:background="@drawable/khung"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:focusable="false"
            android:contextClickable="false"
            android:gravity="center"
            android:text="Trạng thái"/>
    </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/txtDanhSachSP"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Danh sách sản phẩm"
        android:textColor="@color/blue"
        android:textSize="26dp"
        android:textStyle="bold"
        android:paddingLeft="20dp"
        android:gravity="center"
        android:layout_below="@+id/section"
        android:background="@color/gray"
        />


    <TextView
        android:id="@+id/tvThemSp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginVertical="150dp"
        android:layout_marginHorizontal="50dp"
        android:text="Chưa có sản phẩm nào"
        android:textSize="20dp"
        android:textStyle="italic"
        android:gravity="center"
        android:textColor="@color/blue" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/txtDanhSachSP"
        android:id="@+id/rcvSanPham"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton

        android:id="@+id/floatAddSanPham"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="70dp"
        android:backgroundTint="@color/blue"
        android:src="@drawable/item_add" />


</RelativeLayout>