<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.frgTHD_CSP.fragment_taohoadon">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="20">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="right"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnThemsp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/themsp"
                android:padding="10dp"
                android:drawablePadding="7dp"
                android:background="@drawable/khungdn"
                android:backgroundTint="@color/white"
                android:text="Thêm sản phẩm"
                android:textSize="14dp"
                android:textColor="@color/brown"
                android:textStyle="italic"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tvMahd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mã hóa đơn : "
            android:gravity="center"
            android:textSize="18dp"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:layout_margin="10dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcvGioHang"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="19"
            android:layout_margin="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/khung"
            android:layout_margin="20dp"
            android:padding="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtTongtien"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:text="Tổng tiền: "
                android:gravity="center_vertical"
                android:textSize="18dp"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:layout_marginRight="5dp"/>

            <ImageView
                android:id="@+id/btnTaoHDon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/themhd"
                android:background="@drawable/bg_nhap"
                android:padding="10dp"
               />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>