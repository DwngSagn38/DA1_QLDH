<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tiêu đề: "
        android:textSize="26dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        />

    <EditText
        android:id="@+id/edtTieuDeSua"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/khung"
        android:layout_margin="20dp"
        android:hint="Nhập tiêu đề"
        android:paddingLeft="20dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nội dung: "
        android:textSize="26dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        />

    <EditText
        android:id="@+id/edtNoiDungSua"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/khung"
        android:layout_margin="20dp"
        android:paddingLeft="20dp"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <Button
            android:id="@+id/btnLuuSua"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Lưu"
            android:background="@drawable/khungdn"
            android:textColor="@color/white"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/btnHuySua"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Hủy"
            android:layout_marginLeft="20dp"
            android:background="@drawable/khung_delete"
            android:textColor="@color/white"
            android:textStyle="bold"
            />

    </LinearLayout>


</LinearLayout>