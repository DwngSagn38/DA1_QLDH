<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/khung"
    android:padding="10dp"
    android:layout_margin="10dp"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thông tin đơn vị vận chuyển"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textColor="@color/blue"
        android:textSize="26dp"


        />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:layout_marginTop="20dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtMaDonViVCsua"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingLeft="10dp"
            android:background="@drawable/khung"
            android:drawableStart="@drawable/anh1"
            android:drawablePadding="10dp"
            android:textColor="@color/blue"
            android:hint="Mã đơn vị vận chuyển"
            android:textSize="18dp"
            />
    </com.google.android.material.textfield.TextInputLayout>



    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:layout_marginTop="20dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtTenDonViVCsua"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingLeft="10dp"
            android:background="@drawable/khung"
            android:drawableStart="@drawable/anh2"
            android:drawablePadding="10dp"
            android:textColor="@color/blue"
            android:hint="Tên đơn vị vận chuyển"
            android:textSize="18dp"
            />
    </com.google.android.material.textfield.TextInputLayout>



    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:layout_marginTop="20dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtChiPhiVCsua"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingLeft="10dp"
            android:textColor="@color/blue"
            android:background="@drawable/khung"
            android:drawableStart="@drawable/anh3"
            android:drawablePadding="10dp"
            android:hint="Chi phí vận chuyển"
            android:textSize="18dp"
            />
    </com.google.android.material.textfield.TextInputLayout>



    <LinearLayout
        android:id="@+id/llStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="10dp"
        android:visibility="gone"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/trangthai"
            android:checked="true"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:buttonTint="#F44336"
            android:layout_gravity="center"
            android:textSize="12dp" />
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tt"
            android:textSize="22dp"
            android:textStyle="bold"
            />

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mô tả: "
        android:textSize="26dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="60dp"
        android:textColor="@color/blue"
        android:textStyle="bold"
        />
    <EditText
        android:id="@+id/edtMoTaDVVCsua"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/khung"
        android:textColor="@color/blue"
        android:layout_margin="20dp"
        android:paddingLeft="20dp"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingBottom="20dp"
        >

        <Button
            android:id="@+id/btnLuuDVVCsua"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Lưu"
            android:background="@drawable/khungdn"
            android:textColor="@color/white"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/btnHuyDVVCsua"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Hủy"
            android:layout_marginLeft="20dp"
            android:background="@drawable/khung_delete"
            android:textColor="@color/white"
            android:textStyle="bold"
            />

    </LinearLayout>


</LinearLayout>