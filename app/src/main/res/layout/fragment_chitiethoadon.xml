<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".fragment.fragment_chitiethoadon">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvMaHoaDon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã hóa đơn:"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="25dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tvTrangThaiHD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textSize="20dp"
            android:textColor="@color/black"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tvTenKhach"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Khách:"
        android:textSize="20dp"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/tvSDTKhach"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SĐT:"
        android:textSize="20dp"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/tvNgayNhanSP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ngày nhận:"
        android:textSize="20dp"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/tvDiaChiKhach"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Địa chỉ:"
        android:textSize="20dp"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="@color/gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/tvTenSanPham"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sản phẩm:"
            android:textSize="20dp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tvSoLuong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số lượng:"
            android:textSize="20dp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tvGia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giá:"
            android:textSize="20dp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tvVanChuyen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vận chuyển:"
            android:textSize="20dp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tvGiamGia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giảm giá:"
            android:textSize="20dp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tvTienCoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tiền cọc:"
            android:textSize="20dp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tvTongTien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tổng tiền:"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/red"/>

        <TextView
            android:id="@+id/tvMoTa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mô tả:"
            android:textSize="20dp"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tvGio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="giờ:"
            android:textSize="14dp"
            android:textStyle="italic"
            android:layout_gravity="end"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tvNgayTaoDon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày tạo đơn:"
            android:textSize="14dp"
            android:textStyle="italic"
            android:layout_gravity="end"
            android:textColor="@color/black"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_marginTop="10dp"
        android:background="@color/gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnGui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:drawableStart="@drawable/guihd"
            android:padding="10dp"
            android:drawablePadding="8dp"
            android:background="@drawable/khung"
            android:text="Gửi"/>
        <Button
            android:id="@+id/btnHuyHD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/khung"
            android:backgroundTint="@color/red"
            android:textStyle="bold"
            android:padding="15dp"
            android:textColor="@color/white"
            android:layout_marginLeft="20dp"
            android:textSize="18dp"
            android:text="Hủy"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnTaoHD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/khung"
        android:textColor="@color/blue"
        android:layout_gravity="center_horizontal"
        android:textSize="15dp"
        android:drawableStart="@drawable/themhd"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:text="Tạo hóa đơn"/>

</LinearLayout>