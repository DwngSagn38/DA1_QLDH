<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/khung"
        android:layout_margin="10dp"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thông tin sản phẩm"
            android:gravity="center"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:textSize="24dp"
            android:layout_margin="10dp"

            />


        <ImageView
            android:id="@+id/imgAnhSanPhamAdd"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:background="@drawable/chonanh"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:background="@drawable/bg_nhap"
                android:id="@+id/edtMaSPadd"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Mã sản phẩm"
                android:textSize="20dp"
                android:padding="15dp"
                android:textStyle="bold"
                android:textColor="@color/blue"
                android:textColorHint="@color/blue"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/edtTenSPadd"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/khung"
                android:hint="Tên sản phẩm"
                android:textSize="20dp"
                android:paddingLeft="20dp"
                android:textColor="@color/blue"
                android:textColorHint="@color/blue"
                android:textStyle="bold"
                android:layout_marginTop="20dp"

                />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Size (cm) : "
                android:gravity="center_vertical"
                android:textSize="20dp"
                android:paddingLeft="20dp"
                android:textColor="@color/blue"
                android:textStyle="bold"/>
            <Spinner
                android:id="@+id/spnMaBangGiaadd"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                />
        </LinearLayout>

        <RadioGroup
            android:id="@+id/radio_groupAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rdoConHangAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:text="Còn hàng" />

            <RadioButton
                android:id="@+id/rdoDatHangAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/green"
                android:text="Đặt hàng" />

            <RadioButton
                android:id="@+id/rdoNgungBanAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:text="Ngừng bán" />

        </RadioGroup>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginVertical="30dp"

            >

            <Button
                android:id="@+id/btnLuuAdd"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Lưu"
                android:background="@drawable/khungdn"
                android:textColor="@color/white"
                android:textStyle="bold"
                />

            <Button
                android:id="@+id/btnHuyAdd"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Hủy"
                android:layout_marginLeft="20dp"
                android:background="@drawable/khung_delete"
                android:textColor="@color/white"
                android:textStyle="bold"
                />


        </LinearLayout>




    </LinearLayout>





</LinearLayout>