<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/khung"
        android:layout_margin="10dp"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chi tiết sản phẩm"
            android:gravity="center"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:textSize="24dp"
            android:layout_margin="10dp"

            />


        <ImageView

            android:id="@+id/imgAnhSanPhamCT"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/cunhan"
            android:scaleType="fitXY"
            />


        <TextView
            android:id="@+id/txtMaSanPhamCT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:paddingLeft="20dp"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:layout_marginTop="20dp"

            />

        <TextView
            android:id="@+id/txtTenSanPhamCT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:paddingLeft="20dp"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:layout_marginTop="20dp"

            />

        <TextView
            android:id="@+id/txtSizeSanPhamCT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:paddingLeft="20dp"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:layout_marginTop="20dp"

            />

        <TextView
            android:id="@+id/txtGiaBanCT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/blue"
            android:paddingLeft="20dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"

            />

        <TextView
            android:id="@+id/txtTrangThaiCT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/blue"
            android:paddingLeft="20dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"

            />




        <LinearLayout
            android:id="@+id/llChucnang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginVertical="15dp"

            >

            <Button
                android:id="@+id/btnUpdate"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Update"
                android:background="@drawable/khungdn"
                android:textColor="@color/white"
                android:textStyle="bold"
                />

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:layout_marginLeft="20dp"
                android:background="@drawable/khung_delete"
                android:textColor="@color/white"
                android:textStyle="bold"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btnTaoHDon"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableStart="@drawable/themsp"
                android:text="Thêm vào"
                android:textColor="@color/blue"
                android:background="@drawable/khung"
                android:padding="10dp"
                android:textSize="16sp"
                android:gravity="center"
                android:drawablePadding="20dp"
                android:layout_marginVertical="10dp"/>

            <TextView
                android:visibility="gone"
                android:id="@+id/btnTaoHDonOK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableStart="@drawable/themsp"
                android:text="Đã thêm"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/khung"
                android:padding="10dp"
                android:textSize="16sp"
                android:backgroundTint="@color/blue"
                android:layout_gravity="center"
                android:drawablePadding="10dp"
                android:layout_marginVertical="10dp"/>

            <TextView
                android:id="@+id/imgTaoHD"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableStart="@drawable/taohoadon"
                android:text="Tạo hóa đơn"
                android:textColor="@color/blue"
                android:gravity="center"
                android:background="@drawable/bg_nhap"
                android:padding="10dp"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:drawablePadding="10dp"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>
    </LinearLayout>





</LinearLayout>